// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  username String    @unique
  password String
  role     Role      @default(USER)
  address  Address[]
  sale     Sale[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  price       Float
  quantity    Int
  size        String
  color       String
  description String
  image_url   String?
  Sale        Sale?   @relation(fields: [saleId], references: [id])
  saleId      Int?
}

model Address {
  id           Int    @id @default(autoincrement())
  zip_code     String
  street_name  String
  house_number Int
  User         User?  @relation(fields: [userId], references: [id])
  userId       Int?
  Sale         Sale[]
}

model Sale {
  id        Int       @id @default(autoincrement())
  address   Address   @relation(fields: [addressId], references: [id])
  product   Product[]
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  addressId Int
}

generator client {
  provider = "prisma-client-js"
}
