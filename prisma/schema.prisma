model Product {
  id          Int    @id @default(autoincrement())
  name        String @unique
  price       Float
  size        String
  color       String
  description String
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int?
}

generator client {
  provider = "prisma-client-js"
}
